<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <include layout="@layout/toolbar_white_layout"/>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12p"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_marginTop="@dimen/size_12p"
            android:background="@drawable/shape_white_round4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_12p"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="@dimen/size_10p"
                        android:paddingLeft="@dimen/size_12p"
                        android:paddingRight="@dimen/size_12p"
                        android:paddingTop="@dimen/size_10p"
                        android:src="@drawable/person"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12p"
                    android:text="基本信息"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size16"
                    />
            </LinearLayout>

            <View
                style="@style/divier_style"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="姓名"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size14"
                    />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_30p"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="我们应该怎么称呼您"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/font_black666"
                    android:textColorHint="@color/font_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    />


            </LinearLayout>

            <View
                style="@style/divier_style"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"
                android:layout_marginTop="@dimen/size_1p"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电话"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size14"
                    />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_30p"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="我们应该怎么联系您"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/font_black666"
                    android:textColorHint="@color/font_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    />


            </LinearLayout>

            <View
                style="@style/divier_style"/>

            <LinearLayout
                android:id="@+id/ll_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"
                android:layout_marginTop="@dimen/size_1p"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p"
                android:paddingRight="@dimen/size_12p">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="地区"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size14"
                    />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_30p"
                    android:gravity="center_vertical"
                    android:text="请选择您所在省市区"
                    android:textColor="@color/font_hint"
                    android:textSize="@dimen/font_text_size14"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="@dimen/size_10p"
                    android:layout_marginBottom="@dimen/size_10p"
                    android:background="@color/font_gray"
                    android:id="@+id/v_diver"
                    android:layout_marginRight="@dimen/size_12p"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="定位当前"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/tv_location"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/icon_current_position"
                    android:textColor="@color/colorAccent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                style="@style/divier_style"/>

            <LinearLayout
                android:id="@+id/ll_street"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"
                android:layout_marginTop="@dimen/size_1p"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p"
                android:paddingRight="@dimen/size_12p">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="街道"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size14"/>

                <TextView
                    android:id="@+id/tv_street"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_30p"
                    android:gravity="center_vertical"
                    android:text="请选择街道"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/go"
                    android:textColor="@color/font_hint"
                    android:textSize="@dimen/font_text_size14"/>





            </LinearLayout>

            <View
                style="@style/divier_style"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12p"
                android:layout_marginRight="@dimen/size_12p"
                android:paddingBottom="@dimen/size_12p"
                android:id="@+id/ll_address_detail"
                android:paddingTop="@dimen/size_12p">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="@color/font_black333"

                    />

                <TextView
                    android:id="@+id/details_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_30p"
                    android:background="@color/white"
                    android:text="@string/add_address_tip"
                    android:textColor="@color/font_hint"
                    android:textSize="@dimen/font_text_size14"
                    />
            </LinearLayout>
            <View
                style="@style/divier_style"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12p"
                android:layout_marginRight="@dimen/size_12p"
                android:layout_marginTop="@dimen/size_1p"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门牌号"
                    android:textColor="@color/font_black333"

                    />

                <EditText
                    android:id="@+id/et_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_18p"
                    android:background="@color/white"
                    android:hint="例: 5号楼203室"
                    android:maxLength="12"
                    android:paddingBottom="@dimen/size_12p"
                    android:paddingTop="@dimen/size_12p"
                    android:textColor="@color/font_black666"
                    android:textColorHint="@color/font_hint"
                    android:textSize="@dimen/font_text_size14"
                    />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            style="@style/bg_shadow"
            android:layout_marginLeft="@dimen/size_16p"
            android:layout_marginRight="@dimen/size_16p"
            android:layout_marginTop="-1dp"
            />


        <CheckBox
            android:id="@+id/cb_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30p"
            android:background="@null"
            android:button="@drawable/radio_group_selector"
            android:checked="false"
            android:paddingBottom="@dimen/size_12p"
            android:paddingTop="@dimen/size_12p"
            android:text=" 保存该信息到常用地址"
            android:textColor="@color/font_gray"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/commit_btn"
        style="@style/commit_btn"
        android:layout_margin="@dimen/size_12p"
        android:text="确定"
        />
    />


</LinearLayout>