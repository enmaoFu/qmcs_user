<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <include layout="@layout/toolbar_white_layout"/>
    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/examine_sucess"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您通过审核"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"

            />

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_10p"
            android:paddingTop="@dimen/size_10p"
            android:text="重新认证"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_text_size16"
            android:visibility="gone"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/commit_citcle_round"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="@dimen/font_text_size16"
        />

    <LinearLayout
        android:id="@+id/ll_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/size_10p"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:padding="10dp">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想要更专业"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线学习"

            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想要更专业"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"
            />
    </LinearLayout>


</LinearLayout>