<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/app_bg"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar_white_layout"/>
    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />
    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_white_round4"
        android:padding="@dimen/size_12p"
        android:layout_margin="@dimen/size_12p"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_black666"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_text_size18"
                android:text="185123444444"
                android:textColor="@color/font_black666"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重庆市渝中区南岸街道"
            android:textColor="@color/font_black666"
            android:layout_marginTop="@dimen/size_8p"
            />
    </LinearLayout>


</LinearLayout>