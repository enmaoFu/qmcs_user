<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <include layout="@layout/toolbar_white_layout"></include>
    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />
    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_12p">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12p"
            android:text="消息通知"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/mine_swc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_12p"
            app:sb_checked_color="@color/colorAccent"
            app:sb_uncheck_color="@color/gray"/>

    </RelativeLayout>

    <View
        style="@style/divier_style">
    </View>

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_20p">
    </View>

    <TextView
        android:id="@+id/about_we"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray"
        android:drawableRight="@drawable/go"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:text="关于我们"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size16"/>

    <View
        style="@style/divier_style">
    </View>

    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12p"
            android:text="检测更新"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_12p"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/go"
            android:text="v2.0"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size16"/>

    </RelativeLayout>

    <View
        style="@style/divier_style">
    </View>

    <RelativeLayout
        android:id="@+id/rl_clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12p"
            android:text="清除缓存"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"/>

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_12p"
            android:text="2.23M"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size16"/>

    </RelativeLayout>

    <View
        style="@style/divier_style">
    </View>

</LinearLayout>