<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/rl_home"
        android:layout_height="@dimen/toolbar_size">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/iconfont_houtui"
            android:paddingRight="@dimen/size_10p"
            android:paddingLeft="@dimen/size_12p"
            android:id="@+id/iv_return"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="首页"
            android:id="@+id/tv_home"
            android:layout_toRightOf="@id/iv_return"
            android:textColor="@color/font_black666"
            android:textSize="@dimen/size_16p"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="支付成功"
            android:id="@+id/tv_title"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/size_16p"

            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner"
            android:scaleType="fitXY"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:gravity="center"
           android:orientation="vertical"
           android:layout_height="match_parent">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:textColor="@color/white"
              android:text="支付成功"
              android:drawableLeft="@drawable/icon_yes"
              android:drawablePadding="@dimen/size_5p"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:text="你已完成支付，请等待网点接件"
              android:layout_marginTop="@dimen/size_5p"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:gravity="center"
              android:background="@drawable/btn_deatil"
              android:textColor="@color/white"
              android:text="查看详情"
              android:id="@+id/tv_go_detail"
              android:layout_marginTop="@dimen/size_5p"
              />



       </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:paddingTop="@dimen/size_12p"
        android:paddingBottom="@dimen/size_5p"
        android:background="@color/white"
        android:text="订单编号：2649725884232cv"
        android:textSize="@dimen/font_text_size14"
        android:id="@+id/tv_number"
        android:textColor="@color/font_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:paddingTop="@dimen/size_5p"
        android:paddingBottom="@dimen/size_5p"
        android:background="@color/white"
        android:text="交易方式：余额支付"
        android:textSize="@dimen/font_text_size14"
        android:id="@+id/tv_type"
        android:textColor="@color/font_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:paddingTop="@dimen/size_5p"
        android:paddingBottom="@dimen/size_12p"
        android:background="@color/white"
        android:text="下单时间：2017.04.07  11:07"
        android:textSize="@dimen/font_text_size14"
        android:id="@+id/tv_time"
        android:textColor="@color/font_gray"/>

</LinearLayout>