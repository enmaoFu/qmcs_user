<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <include layout="@layout/toolbar_white_layout"></include>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_personal_details"
            android:drawablePadding="@dimen/size_5p"
            android:text="个人信息"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="请确保信息填写真实有效，否则将无法通过审核"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_text_size10"/>

    </LinearLayout>

    <View
        style="@style/divier_style">
    </View>

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="您的姓名  (请填写身份证上的真实姓名)"
        android:maxLength="18"
        android:paddingLeft="@dimen/size_12p"
        android:textColor="@color/font_black333"
        android:textColorHint="@color/font_gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_text_size16"/>

    <View
        style="@style/divier_style">
    </View>

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="您的身份证号码  (将加密处理)"
        android:maxLength="18"
        android:paddingLeft="@dimen/size_12p"
        android:digits="@string/input_digits"
        android:textColor="@color/font_black333"
        android:textColorHint="@color/font_gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_text_size16"/>

    <View
        style="@style/divier_style">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_emergency"
            android:drawablePadding="@dimen/size_5p"
            android:text="紧急联络人信息"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="突发情况我们能及时联系到你"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_text_size10"/>

    </LinearLayout>

    <View
        style="@style/divier_style">
    </View>

    <EditText
        android:id="@+id/et_other_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="TA的姓名  (我们改如何称呼TA)"
        android:maxLength="18"
        android:paddingLeft="@dimen/size_12p"
        android:textColor="@color/font_black333"
        android:textColorHint="@color/font_gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_text_size16"/>

    <View
        style="@style/divier_style">
    </View>

    <EditText
        android:id="@+id/et_other_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="TA的联系方式  (请确保真实有效)"
        android:maxLength="12"
        android:paddingLeft="@dimen/size_12p"
        android:textColor="@color/font_black333"
        android:textColorHint="@color/font_gray"
        android:inputType="number"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_text_size16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/size_12p"
        android:text="在线学习"
        android:id="@+id/tv_study"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/font_text_size16"
        />

    <TextView
        android:id="@+id/tv_commit"
        style="@style/commit_btn"
        android:layout_marginLeft="@dimen/size_12p"
        android:layout_marginRight="@dimen/size_12p"
        android:background="@drawable/shape_commit_gray_btn_bg"
        android:text="下一步"
        />

</LinearLayout>