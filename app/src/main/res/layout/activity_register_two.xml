<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include layout="@layout/toolbar_layout"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_50p"
        android:layout_marginRight="@dimen/size_50p"
        android:layout_marginTop="@dimen/size_30p">

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/re_round">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/re_round_n"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机验证"
                android:textColor="#606060"
                android:textSize="@dimen/font_text_size18"
                android:layout_marginTop="@dimen/size_8p"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0.5p"
            android:layout_toLeftOf="@+id/right"
            android:layout_toRightOf="@+id/left"
            android:layout_marginTop="@dimen/size_25p"
            android:layout_marginLeft="@dimen/size_4p"
            android:layout_marginRight="@dimen/size_4p"
            android:background="#ABABAB"></View>

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/re_round">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/re_round_n"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码设置"
                android:textColor="#606060"
                android:textSize="@dimen/font_text_size18"
                android:layout_marginTop="@dimen/size_8p"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="@dimen/size_34p"
        android:layout_marginRight="@dimen/size_10p">

        <ImageView
            android:id="@+id/list_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_password"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/input_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/list_user"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/size_8p"
            android:hint="请设置您的登录密码(8位字母和数字)"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_text_size16"
            android:textColor="@color/font_black666"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:maxLength="18"/>

    </RelativeLayout>

    <View
        style="@style/divier_style"
        android:layout_marginLeft="@dimen/size_34p"
        android:layout_marginRight="@dimen/size_34p"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/size_34p"
        android:layout_marginRight="@dimen/size_34p">

        <ImageView
            android:id="@+id/list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_password"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/input_login_again_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/list_phone"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/size_8p"
            android:hint="请再次输入您的登录密码"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_text_size16"
            android:textColor="@color/font_black666"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:maxLength="18"/>

    </RelativeLayout>

    <View
        style="@style/divier_style"
        android:layout_marginLeft="@dimen/size_34p"
        android:layout_marginRight="@dimen/size_34p"></View>

    <RelativeLayout
        android:id="@+id/is_agree"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/size_34p"
        android:layout_marginRight="@dimen/size_34p">


        <ImageView
            android:id="@+id/is_img_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_select_normal"/>

        <TextView
            android:id="@+id/read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/is_img_agree"
            android:paddingLeft="@dimen/size_8p"
            android:text="我已阅读并同意"
            android:textSize="@dimen/font_text_size16"
            android:textColor="#bbbbbb"
            android:background="@null"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/get_validate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="《全民传送协议》"
            android:textColor="@color/colorAccent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/font_text_size16"
            android:layout_toRightOf="@+id/read"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/btn_register"
        style="@style/commit_btn"
        android:layout_marginLeft="@dimen/size_34p"
        android:layout_marginRight="@dimen/size_34p"
        android:layout_marginTop="@dimen/size_36p"
        android:text="立即注册"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_12p"
        android:layout_marginLeft="@dimen/size_34p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            android:textSize="@dimen/font_text_size16"
            android:textColor="#999999"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="@dimen/font_text_size16"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>