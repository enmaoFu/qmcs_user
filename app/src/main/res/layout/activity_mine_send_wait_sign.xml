<?xml version="1.0" encoding="utf-8"?>
<!--我的发件待签收-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar_white_layout"/>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_12p"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_marginTop="12dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_round4_stoke"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_left_top_address2"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:paddingRight="@dimen/size_24p"
                    >


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12p"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/size_12p"
                    >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="4"
                        android:paddingLeft="@dimen/size_12p"
                        android:paddingRight="@dimen/size_12p"
                        android:paddingTop="@dimen/size_12p"
                        android:singleLine="true"
                        android:text="杨振宇"
                        android:textColor="@color/font_black666"
                        android:textSize="@dimen/font_text_size16"/>

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/name"
                        android:paddingRight="@dimen/size_12p"
                        android:paddingTop="@dimen/size_12p"
                        android:text="15126945689"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size16"/>

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/name"
                        android:paddingLeft="@dimen/size_12p"
                        android:paddingTop="@dimen/size_5p"
                        android:text="重庆市南岸区"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size14"/>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_city"
                        android:paddingLeft="@dimen/size_12p"
                        android:paddingTop="@dimen/size_5p"
                        android:text="重庆市南岸区南坪街道浪高凯悦B座17-B1"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size14"/>


                </RelativeLayout>
            </LinearLayout>

            <ImageView
                style="@style/bg_shadow"
                android:layout_marginLeft="@dimen/size_4p"
                android:layout_marginRight="@dimen/size_4p"
                android:layout_marginTop="-1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p"
                android:paddingRight="@dimen/size_12p">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快件码"
                    android:textColor="@color/font_black666"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:id="@+id/tv_code"
                    android:text="QMCS 234 3523 3432"
                    android:textColor="@color/font_gray"
                    />


            </LinearLayout>

            <ImageView
                style="@style/bg_shadow"
                android:layout_marginTop="-1dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"
                android:layout_marginTop="@dimen/size_10p"
                android:background="@color/white"
                android:drawableRight="@drawable/icon_check1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p"
                android:paddingRight="@dimen/size_12p"
                android:text="查看订单详情"
                android:id="@+id/tv_go_detail"
                android:textColor="@color/font_black666"
                />

            <ImageView
                style="@style/bg_shadow"
                android:layout_marginTop="-1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10p"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/size_12p">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流信息"
                    android:textColor="@color/font_black666"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:visibility="gone"
                    android:id="@+id/img_start"
                    android:layout_marginTop="@dimen/size_20p"
                    android:src="@drawable/detail_logistics"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:visibility="visible"
                    android:id="@+id/tv_end"
                    android:text="快件到了"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/bg_yellow"
                    android:layout_marginTop="@dimen/size_20p"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/size_12p"
                        android:background="@drawable/shape_circle_yellow"
                        />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="#F4B95D"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:id="@+id/v_end"
                        android:background="@color/divier_color"
                        />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/size_12p"
                        android:background="@drawable/shape_circle_gray"
                        android:id="@+id/v_end_bg"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重庆市"
                        android:textColor="@color/bg_yellow"
                        android:id="@+id/tv_start_city"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="重庆市"
                        android:id="@+id/tv_end_city"
                        android:textColor="@color/font_gray"

                        />
                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_detail"
                    />

                <com.and.yzy.frame.view.listview.ListViewForScrollView
                    android:id="@+id/lv_data"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null">

                </com.and.yzy.frame.view.listview.ListViewForScrollView>


            </LinearLayout>


            <ImageView
                style="@style/bg_shadow"
                android:layout_marginTop="-1dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>