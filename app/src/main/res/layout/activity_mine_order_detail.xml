<?xml version="1.0" encoding="utf-8"?>
<!--订单详情-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <include layout="@layout/toolbar_white_layout"/>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12p"
                android:layout_marginRight="@dimen/size_12p"
                android:layout_marginTop="@dimen/size_12p"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_12p"
                android:paddingLeft="@dimen/size_12p"
                android:paddingRight="@dimen/size_12p"
                android:paddingTop="@dimen/size_12p">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单详情"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size16"/>

                <View
                    style="@style/divier_style"
                    android:layout_marginTop="@dimen/size_5p"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:text="订单编号：3545345435"
                    android:id="@+id/tv_code"
                    android:textColor="@color/font_gray"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:text="下单时间：2017.08.09 17:00"
                    android:textColor="@color/font_gray"
                    android:id="@+id/tv_comiit_time"
                    />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:drawableLeft="@drawable/detail_goods"
                    android:drawablePadding="@dimen/font_text_size10"
                    android:gravity="center"
                    android:text="物品信息"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size16"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_25p"
                        android:text="类型:"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size14"/>

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_18p"
                        android:text="包裹"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_25p"
                        android:text="规格:"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size14"/>

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_18p"
                        android:text="10*10cm     1.2kg"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size14"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:drawableLeft="@drawable/detail_person"
                    android:drawablePadding="@dimen/font_text_size10"
                    android:gravity="center"
                    android:text="发件人信息"
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size16"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_25p"
                        android:text="姓名:"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size14"/>

                    <TextView
                        android:id="@+id/tv_send_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_18p"
                        android:text="王大锤"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5p"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_25p"
                        android:text="电话:"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size14"/>

                    <TextView
                        android:id="@+id/tv_send_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_18p"
                        android:text="12350297956"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_25p"
                        android:layout_marginTop="@dimen/size_5p"
                        android:text="地址:"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size14"/>

                    <TextView
                        android:id="@+id/tv_send_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_18p"
                        android:layout_marginRight="@dimen/size_38p"
                        android:layout_marginTop="@dimen/size_5p"
                        android:text="重庆市九龙坡区石坪桥金桥彼岸D栋2-9啊实打实"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5p"
                        android:drawableLeft="@drawable/detail_time"
                        android:drawablePadding="@dimen/font_text_size10"
                        android:gravity="center"
                        android:text="取件信息"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size16"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25p"
                            android:layout_marginTop="@dimen/size_5p"

                            android:text="时间:"
                            android:textColor="@color/font_black333"
                            android:textSize="@dimen/font_text_size14"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_18p"
                            android:layout_marginTop="@dimen/size_5p"
                            android:text="2小时之内上门"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_text_size14"/>
                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/divier_style"
                    android:layout_marginTop="@dimen/size_8p"></View>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_12p"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/font_text_size10"
                        android:gravity="center"
                        android:text="实际付款"
                        android:textColor="@color/font_black333"
                        android:textSize="@dimen/font_text_size16"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="¥17.00"
                        android:textColor="@color/font_orange_red"
                        android:textSize="@dimen/font_text_size18"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_hase"
                    android:layout_marginTop="@dimen/size_12p"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/font_text_size10"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/size_20p"
                        android:text="预付金额"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size14"/>

                    <TextView
                        android:id="@+id/tv_hase_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="¥17.00"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_text_size16"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>