<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:paddingTop="@dimen/size_8p"
        android:paddingBottom="@dimen/size_8p"
        android:background="@color/white">

        <TextView
            android:id="@+id/balanceTansactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"/>

        <TextView
            android:id="@+id/balanceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥30.00"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_text_size16"
            android:textColor="@color/font_black333"/>

        <TextView
            android:id="@+id/balanceOperationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017.06.22"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size16"
            android:layout_below="@+id/balanceTansactionType"
            android:layout_marginTop="@dimen/size_6p"/>

        <TextView
            android:id="@+id/balanceOperationAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额 ¥100.00"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size16"
            android:layout_below="@+id/balanceTansactionType"
            android:layout_marginTop="@dimen/size_5p"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>