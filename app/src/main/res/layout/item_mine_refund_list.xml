<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/size_12p"
              android:layout_marginRight="@dimen/size_12p"
              android:layout_marginTop="@dimen/size_10p"
              android:paddingBottom="@dimen/size_12p"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/size_12p"
              android:paddingRight="@dimen/size_12p"
              android:paddingTop="@dimen/size_12p">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_weight="1"
            android:singleLine="true"
            android:id="@+id/tv_code"
            android:text="订单编号 3423532422"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_text_size12"
            android:id="@+id/tv_state"
            />
    </LinearLayout>

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_10p"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_5p"
        android:layout_marginRight="@dimen/size_30p"
        android:layout_marginTop="@dimen/size_10p"
        android:drawableLeft="@drawable/icon_list_person"
        android:drawablePadding="@dimen/size_5p"
        android:text="张三"
        android:id="@+id/tv_name"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size14"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_list_adress"
            android:drawablePadding="5dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:id="@+id/tv_address"
            android:paddingBottom="@dimen/size_5p"
            android:text="重庆 重庆市渝中区\n南坪街道南坪西路二号"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size14"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥15.00"
                android:id="@+id/tv_price"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_text_size18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(退款:¥5.00)"
                android:id="@+id/tv_tui_price"
                android:visibility="gone"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_text_size10"
                />
        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2p"
        android:text="取件网点：重庆南岸区网点"
        android:textColor="@color/font_gray"
        android:id="@+id/tv_take_address"
        android:textSize="@dimen/size_12p"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2p"
        android:text="【温馨提示】物品为违禁品"
        android:textColor="@color/font_black333"
        android:id="@+id/tv_msg"
        android:drawablePadding="2dp"
        android:textSize="@dimen/size_12p"
        android:drawableLeft="@drawable/icon_list_hint"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2p"
        android:text="全额退款中"
        android:textColor="@color/bg_yellow"
        android:id="@+id/tv_time"
        android:textSize="@dimen/size_12p"
        />

<View
  style="@style/divier_style"
    android:layout_marginTop="@dimen/size_8p"
    />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12p"
        android:gravity="right"
        android:id="@+id/tv_commit_time"
        android:text="下单时间：2017.08.09 11:24"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/size_12p"
        />





</LinearLayout>