<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/title_bg"
        android:layout_height="@dimen/toolbar_size">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:text="充值成功"
            android:textSize="@dimen/font_text_size18"
            android:textColor="@color/font_black333"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/size_20p"
            android:paddingRight="@dimen/size_12p"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:gravity="center"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/tittle_bj"
        android:layout_marginTop="@dimen/size_12p"
        android:layout_marginLeft="@dimen/size_12p"
        android:layout_marginRight="@dimen/size_12p">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="@dimen/size_20p"
            android:paddingBottom="@dimen/size_20p">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/charge_sucess"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值成功"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_gray"
                android:layout_marginTop="@dimen/size_5p"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥30.00"
                android:textSize="24sp"
                android:id="@+id/tv_price"
                android:textColor="@color/font_black333"
                android:layout_marginTop="@dimen/size_5p"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_12p"
        android:layout_marginRight="@dimen/size_12p"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:background="@drawable/bg_lin_layout"
        android:layout_marginTop="@dimen/size_12p">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50p">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值方式"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_black333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:id="@+id/tv_type"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View style="@style/divier_style"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50p">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易单号"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_black333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="564981651584948516"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_gray"
                android:id="@+id/tv_code"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>