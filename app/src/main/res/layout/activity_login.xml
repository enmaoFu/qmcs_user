<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_delete"
        android:padding="@dimen/size_12p"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20p"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bj"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_30p"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/size_12p"
            android:layout_marginRight="@dimen/size_12p"
            android:paddingLeft="@dimen/size_8p"
            android:hint="请输入手机号码/用户名"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_text_size16"
            android:textColor="@color/font_black666"
            android:background="@null"
            android:maxLength="18"
            android:digits="@string/input_digits"
            android:textCursorDrawable="@null"
            android:drawableLeft="@drawable/list_user"
            android:drawablePadding="@dimen/size_8p"
            android:id="@+id/et_name"/>

        <View
            style="@style/divier_style"
            android:layout_marginLeft="@dimen/size_12p"
            android:layout_marginRight="@dimen/size_12p"></View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/size_12p"
            android:layout_marginRight="@dimen/size_12p"
            android:paddingLeft="@dimen/size_8p"
            android:hint="请输入登录密码"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_text_size16"
            android:textColor="@color/font_black666"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:drawableLeft="@drawable/list_password"
            android:drawablePadding="@dimen/size_8p"
            android:id="@+id/et_pwd"
            android:inputType="textPassword"
            android:maxLength="18"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46p"
        android:layout_marginLeft="@dimen/size_34p"
        android:layout_marginRight="@dimen/size_34p"
        android:layout_marginTop="@dimen/size_20p"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_text_size18"
        android:gravity="center"
        android:background="@drawable/shape_login_btn_bg"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:layout_marginLeft="@dimen/size_35p"
            android:paddingBottom="@dimen/size_10p"
            android:paddingTop="@dimen/size_20p"
            android:textSize="@dimen/font_text_size14"
            android:textColor="#ccffffff"/>

        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:paddingBottom="@dimen/size_10p"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_35p"
            android:paddingTop="@dimen/size_20p"
            android:textSize="@dimen/font_text_size14"
            android:textColor="#80ffffff"/>

    </RelativeLayout>

</LinearLayout>