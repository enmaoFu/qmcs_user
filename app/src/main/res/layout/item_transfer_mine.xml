<?xml version="1.0" encoding="utf-8"?>
<!--我的传送-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/size_12p"
              android:layout_marginRight="@dimen/size_12p"
              android:layout_marginTop="@dimen/size_10p"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/size_12p"
              android:paddingRight="@dimen/size_12p"
              android:paddingBottom="@dimen/size_10p"
              android:paddingTop="@dimen/size_12p">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_weight="1"
            android:singleLine="true"
            android:id="@+id/tv_title"
            android:text="打包码 QMWD 3423532422"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_text_size12"
            android:id="@+id/tv_state"
            />
    </LinearLayout>

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_10p"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="包裹  1.2kg  20m³"
                android:textColor="@color/black"
                android:textSize="@dimen/font_text_size17"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/size_10p"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/tv_go">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的网点："
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size12"
                    />

                <TextView
                    android:id="@+id/tv_end_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="重庆市渝中区石油路网点"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_text_size12"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/transfer_rec_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transfer_rec_itme_destination"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取件网点："
                    android:textColor="@color/font_black333"
                    android:textSize="@dimen/font_text_size12"
                    />

                <TextView

                    android:id="@+id/tv_start_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="重庆市渝中区石油路网点"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_text_size12"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥15.00"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_text_size18"
            android:id="@+id/tv_price"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2p"
            android:text="送达时间：2017.09.02 12:00"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_12p"
            android:id="@+id/tv_msg"
            android:layout_marginRight="@dimen/size_10p"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2p"
            android:text="(超时1小时)"
            android:textColor="@color/font_red"
            android:textSize="@dimen/size_12p"
            android:id="@+id/tv_out_time"
            />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2p"
        android:gravity="right"
        android:text="接单时间：2017.08.09 11:24"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/size_12p"
        android:id="@+id/tv_time"
        />

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_10p"
        android:id="@+id/v_diver"
        android:layout_marginBottom="@dimen/size_10p"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_black_round4"
            android:paddingBottom="@dimen/size_8p"
            android:paddingLeft="@dimen/size_20p"
            android:paddingRight="@dimen/size_20p"
            android:paddingTop="@dimen/size_8p"
            android:text="删除订单"
            android:id="@+id/tv_left"
            android:textColor="@color/font_black666"
            />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20p"
            android:background="@drawable/shape_yellow_round4"
            android:paddingBottom="@dimen/size_8p"
            android:paddingLeft="@dimen/size_20p"
            android:paddingRight="@dimen/size_20p"
            android:paddingTop="@dimen/size_8p"
            android:text="扫码取件"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>