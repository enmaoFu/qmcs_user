<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <include layout="@layout/toolbar_white_layout"/>


    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        />

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_12p"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/normal_white_pressed_gray"
        android:gravity="center_vertical"
        android:id="@+id/ll_img"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mine_img"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/size_12p"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/default_head"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_head"
            app:placeholderImageScaleType="centerCrop"
            app:roundAsCircle="true">
        </com.facebook.drawee.view.SimpleDraweeView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/go"
            android:textSize="@dimen/font_text_size16"
            />
    </LinearLayout>

    <View
        style="@style/divier_style"/>

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_12p"
        />

    <LinearLayout
        android:id="@+id/ll_set_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户名"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_12p"
            android:text=" "
            android:id="@+id/tv_name"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size16"
            />
    </LinearLayout>

    <View
        style="@style/divier_style"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray"
        android:gravity="center_vertical"
        android:id="@+id/ll_phone"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号码"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_12p"
            android:text="12456435653"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size16"
            android:id="@+id/tv_phone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_12p"
            android:drawableRight="@drawable/go"
            android:text="更改"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_text_size16"
            />
    </LinearLayout>

    <View
        style="@style/divier_style"
        />

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray"
        android:drawablePadding="@dimen/size_10p"
        android:drawableRight="@drawable/go"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:text="密码设置"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size16"/>

    <View
        style="@style/divier_style"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray"
        android:drawablePadding="@dimen/size_10p"
        android:drawableRight="@drawable/go"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:text="常用地址"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size16"/>

    <View
        style="@style/divier_style"
        />

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_40p"
        />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray"
        android:gravity="center"
        android:text="退出当前账号"
        android:textColor="@color/font_red"
        android:textSize="@dimen/font_text_size16"
        />

    <View
        style="@style/divier_style"
        />


</LinearLayout>