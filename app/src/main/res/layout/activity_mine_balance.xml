<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include layout="@layout/toolbar_white_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#208BE9"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_12p"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p">

        <TextView
            android:id="@+id/balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额账户(元)"
            android:textSize="@dimen/font_text_size16"
            android:layout_marginTop="@dimen/size_12p"
            android:textColor="#b3ffffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#ffff"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00"
                android:textColor="@color/white"
                android:textSize="35sp"/>

        </LinearLayout>

        <View
            style="@style/divier_style"
            android:layout_marginTop="@dimen/size_12p"
            android:background="#b3ffffff"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12p">

            <TextView
                android:id="@+id/price_text"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="冻结金额"
                android:gravity="center"
                android:textSize="@dimen/font_text_size16"
                android:background="@drawable/shape_black_round17_bg"
                android:textColor="#b3ffffff"/>

            <TextView
                android:id="@+id/frozen_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="¥100.00"
                android:textColor="@color/white"
                android:textSize="@dimen/font_text_size16"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray"
        android:text="充值"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size16"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_deposit"
        android:paddingLeft="@dimen/size_12p"
        android:drawablePadding="@dimen/size_10p"
        android:drawableRight="@drawable/go"
        android:paddingRight="@dimen/size_12p"/>

    <View
        android:id="@+id/view"
        style="@style/divier_style"/>

    <TextView
        android:id="@+id/take"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:background="@drawable/normal_white_pressed_gray"
        android:text="取现"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size16"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_withdra_deposit"
        android:paddingLeft="@dimen/size_12p"
        android:drawablePadding="@dimen/size_10p"
        android:drawableRight="@drawable/go"
        android:paddingRight="@dimen/size_12p"/>

    <View
        style="@style/divier_style"/>

</LinearLayout>