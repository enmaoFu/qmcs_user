<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/size_12p"
              android:layout_marginRight="@dimen/size_12p"
              android:layout_marginTop="@dimen/size_12p"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/size_10p"
              android:paddingTop="@dimen/size_12p">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="订单编号 3423532422"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_text_size12"
            />
    </LinearLayout>

    <View
        style="@style/divier_style"
        android:layout_marginTop="@dimen/size_10p"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"/>


    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_5p"
        android:layout_marginRight="@dimen/size_30p"
        android:layout_marginTop="@dimen/size_10p"
        android:drawableLeft="@drawable/icon_list_person"
        android:drawablePadding="@dimen/size_5p"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:text="张三"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size14"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_list_adress"
            android:drawablePadding="5dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:paddingBottom="@dimen/size_5p"
            android:text="重庆 重庆市渝中区\n南坪街道南坪西路二号"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size14"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥15.00"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_text_size18"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2p"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:text="超重1公斤，产生追加费用"
        android:textColor="@color/font_red"
        android:textSize="@dimen/font_text_size12"
        />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2p"
        android:gravity="right"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        android:text="下单时间：2017.08.09 11:24"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_text_size12"
        />

    <View
        style="@style/divier_style"
        android:layout_marginBottom="@dimen/size_12p"
        android:layout_marginTop="@dimen/size_10p"
        android:id="@+id/v_diver"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="right"
        android:paddingLeft="@dimen/size_12p"
        android:paddingRight="@dimen/size_12p"
        >

        <TextView

            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_black_round4"
            android:paddingBottom="@dimen/size_8p"
            android:paddingLeft="@dimen/size_20p"
            android:paddingRight="@dimen/size_20p"
            android:paddingTop="@dimen/size_8p"
            android:text="取消订单"

            android:textColor="@color/font_black333"
            />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20p"
            android:background="@drawable/shape_yellow_round4"
            android:paddingBottom="@dimen/size_8p"
            android:paddingLeft="@dimen/size_20p"
            android:paddingRight="@dimen/size_20p"
            android:paddingTop="@dimen/size_8p"
            android:text="立即支付"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>