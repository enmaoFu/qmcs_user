<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/rl_home"
        android:layout_height="@dimen/toolbar_size">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/iconfont_houtui"
            android:paddingRight="@dimen/size_10p"
            android:paddingLeft="@dimen/size_12p"
            android:id="@+id/iv_return"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="首页"
            android:layout_toRightOf="@id/iv_return"
            android:textColor="@color/font_black666"
            android:textSize="@dimen/size_16p"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="发布成功"
            android:id="@+id/tv_title"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/size_16p"

            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner"
            android:scaleType="fitXY"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:gravity="center"
           android:orientation="vertical"
           android:layout_height="match_parent">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:textColor="@color/white"
              android:text="发布成功"
              android:drawableLeft="@drawable/icon_yes"
              android:drawablePadding="@dimen/size_5p"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:text="我们会根据您发布的行程匹配传送单"
              android:layout_marginTop="@dimen/size_5p"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:gravity="center"
              android:background="@drawable/btn_deatil"
              android:textColor="@color/white"
              android:text="查看行程"
              android:id="@+id/tv_go_detail"
              android:layout_marginTop="@dimen/size_5p"
              />



       </LinearLayout>

    </RelativeLayout>



</LinearLayout>