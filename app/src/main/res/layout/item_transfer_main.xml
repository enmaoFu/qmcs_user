<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12p"
                android:layout_marginRight="@dimen/size_12p"
                android:layout_marginTop="@dimen/size_10p"
                android:background="@color/white"
                android:paddingBottom="8dp">

    <TextView
        android:id="@+id/transfer_rec_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="单件  1.2kg  20m³"
        android:textColor="@color/black"
        android:textSize="@dimen/font_text_size17"/>

    <LinearLayout
        android:id="@+id/transfer_rec_itme_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/transfer_rec_item_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="@dimen/size_10p"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/tv_go">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的网点："
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView
            android:id="@+id/tv_end_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="重庆市渝中区石油路网点"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/transfer_rec_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transfer_rec_itme_destination"
        android:layout_marginLeft="@dimen/size_8p"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取件时间："
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView

            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="今日13点之前取件"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"/>

    </LinearLayout>


    <TextView
        android:id="@+id/transfer_rec_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_8p"
        android:layout_marginTop="@dimen/size_12p"
        android:text="¥20.20"
        android:textColor="@color/font_black333"
        android:textSize="@dimen/font_text_size17"/>

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/transfer_rec_item_price"
        android:layout_marginRight="@dimen/size_8p"
        android:layout_marginTop="10dp"
        android:background="@drawable/transfer_rec_item_text"
        android:gravity="center"
        android:paddingBottom="@dimen/size_4p"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/size_10p"
        android:paddingTop="@dimen/size_4p"
        android:text="马上抢"
        android:textColor="@color/white"
        android:textSize="@dimen/font_text_size14"/>

    <View
        android:id="@+id/transfer_rec_item_hr"
        style="@style/divier_style"
        android:layout_below="@+id/transfer_rec_item_date"
        android:layout_marginLeft="@dimen/size_12p"
        android:layout_marginRight="@dimen/size_12p"
        android:layout_marginTop="@dimen/size_8p"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/transfer_rec_item_hr"
        android:layout_marginLeft="@dimen/size_8p"
        android:layout_marginRight="@dimen/size_20p"
        android:layout_marginTop="@dimen/size_8p"
        android:layout_toLeftOf="@+id/tv_distance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布网点："
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size12"
            />

        <TextView
            android:id="@+id/tv_start_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重庆市南岸区网点"
            android:singleLine="true"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size12"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/transfer_rec_item_hr"
        android:layout_marginRight="@dimen/size_8p"
        android:layout_marginTop="@dimen/size_8p"
        android:text="200m"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_text_size12"/>

</RelativeLayout>